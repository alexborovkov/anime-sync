# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual credentials
# .env.local is gitignored and will not be committed

# Trakt API Configuration
TRAKT_CLIENT_ID=your_trakt_client_id_here

# MyAnimeList API Configuration
MAL_CLIENT_ID=your_mal_client_id_here

# ids.moe API Configuration (Optional but Recommended)
# Get your API key from: https://ids.moe/
# Used for fast anime ID mapping between Trakt (TVDB/TMDb) and MyAnimeList
IDS_MOE_API_KEY=your_ids_moe_api_key_here

# Application URL
APP_URL=http://localhost:4201
