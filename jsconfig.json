{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "trakt-mal-sync/*": ["./app/*"],
      "trakt-mal-sync/config/environment": ["./config/environment.js"],
      "*": ["./node_modules/*"]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "config/**/*",
    "vite.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tmp"
  ]
}
