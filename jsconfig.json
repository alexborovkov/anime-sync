{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2022", "dom"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "trakt-mal-sync/*": ["app/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tmp"
  ]
}
